 <div class="show-container">
  <div class="show-row">

    <div class="show-main-image">
      <%= cl_image_tag @spaceship.photo %>
    </div>

    <div class="show-product">

      <div class="name_launch_cost">
        <div class="launch_siteAnd_name">
          <h2><span>Spaceship Name:</span> <%= @spaceship.name %></h2>
          <h4><span>Launch Site:</span> <%= @spaceship.launch_site %></h4>
        </div>
        <div class="cost_for_launch">
          <p><span>Cost:</span> <%= @spaceship.cost %></p><% if current_user && policy(@spaceship).destroy? %>
          <% end %>
        </div>
      </div>

      <div class="show-card-actions-container">
        <div class="show-card-actions-row">
          <div class="show-card-actions-buttons">
            <%=link_to "Delete", spaceship_path, method: :delete, data: { confirm: 'Are you sure?' }%> <br>
            <% if current_user && policy(@spaceship).edit? %>
            <%=link_to "Edit", edit_spaceship_path(@spaceship)%> <br>
            <% end %>
            <%= link_to 'book a seat Today!', new_spaceship_booking_path(@spaceship) %> <br>
            <%= link_to "back to main page", spaceships_path %>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>
