<h1>Rent your spaceship</h1>
<p>Earn money as a spaceship host!</p>

<div class="d-flex">
  <div class="container">
    <div class="banner">
      <div class="row">
        <div class="col-12">
          <h3>Add your Spaceship</h3>
          <%= simple_form_for (@spaceship) do |f| %>
          <% if @spaceship.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @spaceship.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :cost %>
            <%= f.input :launch_site %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>
          <div class="form-actions">
            <%= f.submit class: "btn btn-warning", value:"List Spaceship" %>
          </div>
          <% end %>
        </div>
        <%= link_to "⬅️Home", root_path, class: "underline" %>
      </div>
    </div>
  </div>
</div>























