<div class="rocketnewimage">
<div class="banner-new">
    <h1>Begin hosting your <span id="stars">rocket</span> today!</h1>
</div>

  <div class="container">
    <div class="banner">
      <div class="row">
        <div class="col-12">
          <h3 class="new-form-header">Fill out the form to begin renting out your spaceship</h3>
          <%= simple_form_for (@spaceship) do |f| %>
          <% if @spaceship.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @spaceship.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <div class="form-inputs">
            <h3 id="spaceship-details">Add your spaceship's details below</h3>
            <%= image_tag "rocket-dribbble.gif", class: "avatar-createspaceship", loop:"infinite" %>
            <%= f.input :name, label: "Rocket name:", required: false, label_html: { class: ''} %>
            <%= f.input :cost, label: "Cost per launch:", required: false, label_html: { class: ''} %>
            <%= f.input :launch_site, label: "Launch site:", required: false, label_html: { class: ''} %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>
          <div class="form-actions">
            <%= f.submit class: "", value:"List Spaceship" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






















